@model List<CartModel>
<head>
    <style>
        .card{
            border: 1px var(--dark-peach) solid;
        }
        .card-header{
            background-color:var(--light-peach);
        }
        .card-body{
            background-color: var( --very-light-peach);
        }
    </style>
</head>
<h3 style="text-align:center;margin:20px 0px;">
    My Cart 
    <span class="material-icons" style="font-size:35px;padding:0px;padding-top:5px;">
        shopping_cart
    </span>
</h3>
@if (Model.Count > 0)
{

    @foreach (var item in Model)
    {
        <div class="card" style="margin:30px 40px">
            <div class="card-header">
                <div class="row">
                    <div class="col-xl-4 d-flex justify-content-center align-items-center">
                        Item Name
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        Label
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        Quantity
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        Price
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        Remove from Cart
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xl-4 d-flex justify-content-center align-items-center">
                        <div class="row">
                            <div class="col-xl-5 "><img src="../images/Products/@item.SubCatMap.Product.imageid" width=160px height=120px></div>
                            <div class="col-xl-7" >
                                <h5 style="margin-left:10px" class="card-title">@item.SubCatMap.Product.productName</h5>
                                <p style="margin-left:10px;font-size:13px" class="card-text">@item.SubCatMap.Product.productDescription.Substring(0,100)...</p>
                            </div>
                        </div>


                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        @item.SubCatMap.categoryName
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        <div class="form-group">
                            <a class=" light-button" style="padding:4px 12px" asp-action="MinusCartItemCount" asp-route-id=@item.cartId>-</a>
                            <input type="number" disabled value="@item.quantity" style="width:50px;text-align:center" >
                            <a class=" light-button" style="padding:3px 10px" asp-action="AddCartItemCount" asp-route-id=@item.cartId>+</a>
                        </div>
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        ₹@item.price
                    </div>
                    <div class="col-xl-2 d-flex justify-content-center align-items-center">
                        <a class=" light-button" style="width:100px;text-align:center;padding:5px" asp-action="RemoveCartItem" asp-route-id="@item.cartId">Remove</a>
                    </div>
                </div>
            </div>
        </div>
    }
}
@if (Model.Count>0)
{
    <div class="row">
        <div class="col-xl-8"></div>
        <div class="col-xl-2 d-flex justify-content-center align-items-center">
            <a class=" dark-button" style="width:150px;text-align:center;padding:5px" asp-action="RemoveAllCartItems">Empty Cart</a>
        </div>
        <div class="col-xl-2 d-flex justify-content-center align-items-center">
            <a class=" dark-button" style="width:150px;text-align:center;padding:5px" asp-action="BuyNow" >Buy Now</a>
        </div>
    </div>
}

