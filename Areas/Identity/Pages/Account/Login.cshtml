@page
@model LoginModel

@{

}
<head>
    <style>
        body {
            overflow: hidden;
            font-family: 'Open Sans', sans-serif;
        }

        .container {
            position: relative;
            margin-right: 0px;
            padding-right: 0px;
        }

        form {
            margin-top: 50px;
            width: 50%;
            float: left;
        }

        .login_pg_img {
            position: absolute;
            top: 0;
            right: 0;
            height: 511px;
            width: 750px;
        }

        .on_top_of_image {
            position: absolute;
            margin-top: 400px;
            left: 70%;
            transform: translate(-50%, -50%);
        }

        /*button:focus {
            border-color: var(--dark-peach);
            box-shadow: 0 0 0 0.10rem var(--dark-peach);
            background-color: white;
            margin: 8px 0px;
        }*/

    </style>
</head>

<div class="container">
    <form id="account" method="post">
        <h3>Back for More Sweetness?</h3>
        <h5>Lets Login !</h5>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Input.Email" class="form-label"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
            <label asp-for="Input.Password" class="form-label"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div>
            <div class="checkbox">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div>
            <button id="login-submit" type="submit" class="w-100 btn dark-button ">Log in</button>
        </div>
        <div>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password? Reset in Minutes !</a>
            </p>

        </div>
    </form>
    <img class="login_pg_img" src="../../../images/login_page_svg.png" alt="Your image">
    <div class="on_top_of_image">
        <h3>New to cake rush ? </h3>
        <h5>Register and Join the Sweetness !</h5>
        <button id="login-submit " type="submit" class="w-100 btn light-button"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></button>

    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
